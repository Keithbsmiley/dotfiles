#!/bin/bash

if [[ $# -ne 0 ]]; then
  passed_args=("$@")
else
  read -r input_string
  passed_args=("$input_string")
fi

args=(--compact)
for arg in "${passed_args[@]}"; do
  if [[ $arg == s:* ]]; then
    args+=("_\$s${arg##*:}")
  elif [[ $arg == _\$s* ]]; then
    args+=("$arg")
  elif [[ $arg == \$s* ]]; then
    args+=("$arg")
  else
    args+=("_\$s$arg")
  fi
done

exec xcrun swift-demangle "${args[@]}"
