#!/usr/bin/env python
import netrc
import os
import requests
import sys


def creds():
    n = netrc.netrc()
    auth = n.authenticators("api.github.com")
    if auth is None:
        sys.exit("Add api.github.com to your ~/.netrc")

    user = auth[0]
    if user is None:
        user = auth[1]

    password = auth[2]
    if user is None or password is None:
        sys.exit("Invalid netrc entry for api.github.com")

    return user, password



def open_pulls():
    user, password = creds()
    r = requests.get("https://api.github.com/notifications", auth=(user, password))
    json = r.json()
    count = 0

    for blob in json:
        kind = blob["subject"]["type"]
        if kind != "PullRequest":
            continue

        url = blob["subject"]["url"]
        r = requests.get(url, auth=(user, password))
        url = r.json()["html_url"]
        os.system("open " + url)
        count += 1

    if count < 1:
        print("No Unread Pull Requests")


open_pulls()
