#!/usr/bin/env bash

set -e

branch="origin"
if [[ $# == 2 ]];then
    branch=$2
fi

remotes=($(git remote -v | awk "{ print \$1, \$2; }" | uniq))
for i in ${!remotes[@]}
do
    if [[ $branch == ${remotes[$i]} ]];then
        url=${remotes[$i + 1]}
    fi
done

if [[ "$url" =~ \\*.git$ ]];then
    url="${url:0:${#url}-4}"
fi

if [[ $url == "" ]];then
    echo "No remotes found for $branch"
else
    open "$url/$1"
fi
