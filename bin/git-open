#!/usr/bin/env bash

branch="origin"
if [[ $# == 2 ]];then
    branch=$2
fi

remotes=($(git remote -v | awk "{ print \$1, \$2; }" | uniq))
for i in ${!remotes[@]}
do
    if [[ $branch == ${remotes[$i]} ]];then
        url=${remotes[$i + 1]}
    fi
done

if [[ "$url" =~ \\*.git$ ]];then
    url="${url:0:${#url}-4}"
fi

if [[ $url == "" ]];then
    echo "No remotes found for $branch"
else
    string=$(git rev-parse $1 2>/dev/null)
    if [[ $? == 0 && -n $1 ]]; then
        string="commit/$string"
    else
        string="$1"
    fi

    open "$url/$string"
fi
