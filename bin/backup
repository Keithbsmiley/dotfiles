#!/bin/sh

PROG=$0

show_help() {
  echo "Usage $PROG [{DEST} {SRC} {EXCLUDE}]"
  return
}

log() {
  echo "$1"
  logger -t "$PROG" "$1"
}

shopt -s nocasematch
if [[ $1 == "help" || $# -gt 3 ]];then
    show_help
    exit
fi
shopt -u nocasematch

DEST="/Volumes/Backup/"
SRC="/"
EXCLUDE="$HOME/.backupignore"

if [[ ! -z $1 ]];then
    DEST=$1
fi

if [[ ! -z $2 ]];then
    SRC=$2
fi

if [[ ! -z $3 ]];then
    EXCLUDE=$3
fi

if [[ ! -w $DEST ]];then
    log "Cannot write to $DEST"
    exit
fi

if [[ ! -r $SRC ]];then
    log "Cannot read $SRC"
    exit
fi

log "Starting backup"

sudo rsync  --acls \
            --archive \
            --crtimes \
            --delete \
            --delete-excluded \
            --exclude-from=$EXCLUDE \
            --fileflags \
            --hard-links \
            --ignore-errors \
            --log-file=$HOME/Desktop/rsync.txt \
            --one-file-system \
            --protect-args \
            --sparse \
            --stats \
            --verbose \
            --xattrs \
            "$SRC" "$DEST"

log "Finished backup"
