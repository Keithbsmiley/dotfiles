{
    "clangd.path": "/usr/local/opt/llvm/bin/clangd",
    "clangd.semanticHighlighting": true,
    "diagnostic.checkCurrentLine": true,
    "git.addGBlameToVirtualText": true,
    "languageserver": {
        "bash": {
            "args": [
                "start"
            ],
            "command": "bash-language-server",
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        },
        "haskell": {
            "args": [
                "--lsp"
            ],
            "command": "haskell-language-server-wrapper",
            "filetypes": [
                "haskell",
                "lhaskell"
            ],
            "rootPatterns": [
                "*.cabal",
                "stack.yaml",
                "cabal.project",
                "package.yaml",
                "hie.yaml"
            ]
        },
        "sourcekit-lsp": {
            "command": "/Applications/Xcode-12.2.0.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/bin/sourcekit-lsp",
            "filetypes": [
                "c",
                "cpp",
                "def",
                "objc",
                "swift"
            ],
            "requireRootPattern": true,
            "rootPatterns": [
                "Package.swift"
            ]
        }
    },
    "python.jediEnabled": false,
    "python.linting.mypyEnabled": true
}
