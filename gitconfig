[core]
  excludesfile = ~/.gitignore_global
  editor = vim
[push]
  default = matching
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[mergetool "fugitive"]
  cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[mergetool]
  prompt = false
[merge]
  tool = vimdiff
  log = true
[color]
  ui = auto
[github]
  user = keithbsmiley
[help]
  autocorrect = 1
[hub]
  protocol = https
[alias]
  punch = push --force
  s     = status -sb
  cl    = clone
  c     = commit
  p     = push
  a     = add --all
  ap    = add -p
  d     = diff
  dt    = difftool
  dc    = diff --cached
  ba    = branch -a
  rv    = remote -v
  sub   = submodule update --init --recursive
  l     = log -5 --topo-order --pretty        = 'format:%Cgreen%h%Creset %s%Cred%d%Creset'
