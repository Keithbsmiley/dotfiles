[user]
  name = Keith Smiley
  email = keithbsmiley@gmail.com
[core]
  excludesfile = ~/.gitignore_global
  attributesfile = ~/.gitattributes
  editor = vim
[push]
  default = upstream
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[mergetool "fugitive"]
  cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[mergetool]
  prompt = false
[merge]
  tool = vimdiff
  log = true
[merge "bundler"]
  name = bundler
  driver = bundle
[merge "railsschema"]
  name = newer Rails schema version
  driver = hookup resolve-schema %A %O %B %L
[color]
  ui = auto
[github]
  user = keithbsmiley
[help]
  autocorrect = 1
[hub]
  protocol = https
[alias]
  a     = add --all
  ap    = add -p
  ba    = branch -a
  c     = clone
  cb    = !sh -c 'git push origin HEAD:refs/heads/$1 && git fetch origin && git branch --track $1 origin/$1 && cd . && git checkout $1' -
  com   = commit
  d     = diff
  dc    = diff --cached
  dt    = difftool
  l     = log -5 --topo-order --graph --pretty='format:%Cblue%h%Creset %s%Cred%d%Creset %C(yellow bold)(%an)%Creset'
  last  = diff HEAD^ HEAD
  pul   = pull
  punch = push --force
  r     = reflog -5
  rv    = remote -v
  s     = status -sb
  sub   = submodule update --init --recursive
  undo  = reset --soft HEAD^
[gitsh]
  defaultCommand = s
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true
[fetch]
  prune = true
