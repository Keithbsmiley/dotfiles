[user]
  name = Keith Smiley
  email = keithbsmiley@gmail.com
[core]
  excludesfile = ~/.gitignore
  editor = vim
  whitespace = trailing-space,space-before-tab
  pager = pager
[init]
  templatedir = ~/.git_template
[push]
  default = upstream
[diff]
  tool = vimdiff
  renames = copies
  mnemonicprefix = true
  algorithm = patience
[difftool]
  prompt = false
[mergetool "vim"]
  cmd = vim -c "normal\\ gg]c" -f \"$MERGED\"
  prompt = false
[mergetool]
  keepBackup = false
[merge]
  tool = vim
  log = true
  stat = true
[color]
  ui = auto
[github]
  user = keith
[help]
  autocorrect = 1
[hub]
  protocol = https
[alias]
  a           = add
  adeleted    = !sh -c 'git ls-files `git rev-parse --show-toplevel` --deleted -z | xargs -0 git rm -r'
  ap          = add -p
  auntracked  = !sh -c 'git ls-files `git rev-parse --show-toplevel` --others --exclude-standard -z | xargs -0 git add'
  b           = branch
  ba          = branch -a
  branches    = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  c           = clone --recursive
  cb          = !sh -c 'git checkout -b $1 && git push -u origin $1' -
  co          = checkout
  com         = commit --verbose
  coma        = commit --verbose --amend --no-edit
  comf        = commit --verbose --fixup=HEAD
  cop         = !sh -c 'git branch | cut -c 3- | fzf -1 --query=$1 | xargs git checkout' -
  copr        = !sh -c 'git branch -r | cut -c 3- | grep -v HEAD | cut -d "/" -f 2 | fzf --query=$1 | xargs git checkout' -
  co-pr       = !sh -c 'git fetch origin pull/$1/head:pr/$1 && git checkout pr/$1' -
  ctags       = !.git/hooks/ctags
  d           = diff
  dc          = diff --cached
  dm          = !sh -c 'git diff $(git merge-base master $(git name-rev --name-only HEAD))'
  dstash      = !sh -c 'git stash show -p stash@{${1-0}}' -
  dt          = difftool
  dtc         = difftool --cached
  l           = log -20 --topo-order --graph --pretty='format:%Cblue%h%Creset %s%Cred%d%Creset %C(yellow)(%an)%Creset %C(red)%G?%Creset'
  last        = diff HEAD^ HEAD
  pul         = pull
  punch       = push --force-with-lease
  r           = reflog -5
  ra          = rebase --abort
  rc          = rebase --continue
  rma         = rebase master
  rmi         = rebase master -i
  rv          = remote -v
  s           = status -sb
  sub         = submodule update --init --recursive
  undo        = reset --soft HEAD^
  wtc         = !sh -c 'git commit $@ -m \""`curl -s http://whatthecommit.com/index.txt`"\"' -
[fetch]
  prune = true
[branch]
  autosetupmerge = true
[rerere]
  enabled = true
[rebase]
  autosquash = true
  autostash = true
[stash]
  showPatch = true
[gpg]
  program = gpg2
[commit]
  gpgsign = true
