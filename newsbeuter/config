# http://www.newsbeuter.org/
auto-reload yes
reload-time 30
notify-beep yes
reload-threads 20

error-log "error.log"

# Hide read stuff
show-read-feeds no
show-read-articles no
mark-as-read-on-hover yes

# vim-like keys
bind-key j down
bind-key k up
bind-key ^D pagedown
bind-key ^U pageup
unbind-key g
unbind-key G

# Sorting feeds and articles
feed-sort-order unreadarticlecount-asc
article-sort-order date-asc

# Display format for feeds and articles
feedlist-format "%n %8u    %t"
articlelist-format "%f %D    %t"

# Mutt like URLView
bind-key ENTER goto-url article

# Browser for opening URLs, same as mutt
browser "~/.mutt/urlhandler.sh %u"

# The Old Reader as a sync engine
urls-source "oldreader"
oldreader-show-special-feeds "no"
oldreader-login "keithbsmiley@gmail.com"
# https://github.com/akrennmair/newsbeuter/issues/149
# This file needs to be in the format:
# oldreader-password "sekret"
include "~/.oldreaderrc"

# Top and bottom colors
color info color10 color0
# Highlighted row color
color listfocus default color0

# vim:ft=conf
