# Path to dotfiles repo
export DOTFILES="$(dirname $(readlink $HOME/.shellrc))"

# F - quit if it's a single screen
# i - Vim's smart case
# j.5 - Center search results
# K - Quit on CTRL-C
# M - Longer prompt
# R - output colors correctly
# X - Don't send clear screen signal
export LESS="Fij.5KMRX"

# Loads a local settings file for sekrets
if [[ -e $HOME/.localrc ]];then
  source $HOME/.localrc
fi

if [[ $OSTYPE == darwin* ]];then
  export OSX=true
fi

# Set the path to include:
#  - /usr/local/bin  for Homebrew
#  - /usr/local/sbin
#  - /usr/bin        for system executables
#  - /bin
#  - /usr/sbin
#  - /sbin
#  - $HOME/.bin      for local tools
export PATH="/usr/local/bin:/usr/local/sbin:/usr/bin:/bin:/usr/sbin:/sbin:$HOME/.bin"

colorize

# vim: ft=sh:sts=2:sw=2:ts=2
